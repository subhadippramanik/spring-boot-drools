package rules

global java.util.Map map;
	
rule "Unit Temperature"
when
    $map: Map(this["bacnet:unit"] == "c" 
    		|| this["bacnet:unit"] == "f")
then
	$map.put("temperature", "m:");
end

rule "Unit RPM"
when
    $map: Map(this["bacnet:unit"] == "rpm")
then
	$map.put("fanspeed", "m:");
end

rule "Commandable"
when
    $map: Map(this.containsKey("bacnet:max"))
then
	$map.put("cmd", "m:");
end